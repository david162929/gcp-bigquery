{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "quotes": ["error", "double"],
        "indent": ["error", 4],
        "max-len": ["error", { "code": 200 }],
        "comma-dangle": ["error", "never"],
        "no-undef": "error",
        "no-global-assign": "error",
        "no-unused-vars": ["error", { "vars": "local" }]
    }
}